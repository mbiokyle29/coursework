<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:fontFamily="fontawesome-webfont.ttf"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAlignment="center"
            bootstrapbutton:bb_roundedCorners="false"
            bootstrapbutton:bb_size="default"
            bootstrapbutton:bb_type="default"
            bootstrapbutton:bb_text_alignment="center"
            android:enabled="false"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </com.beardedhen.androidbootstrap.BootstrapButton>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_weight="0.6"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="0dp">

                    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:text="All"
                        android:textAlignment="center"
                        bootstrapbutton:bb_roundedCorners="false"
                        bootstrapbutton:bb_size="default"
                        bootstrapbutton:bb_type="chore"
                        bootstrapbutton:bb_text_alignment="center"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@id/chores_allFilter_button"
                        android:onClick="onAllFilterClick">
                    </com.beardedhen.androidbootstrap.BootstrapButton>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="0.8"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="0dp">

                        <com.beardedhen.androidbootstrap.BootstrapButton
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:text="Created"
                            android:textAlignment="center"
                            bootstrapbutton:bb_roundedCorners="false"
                            bootstrapbutton:bb_size="default"
                            bootstrapbutton:bb_type="chore"
                            bootstrapbutton:bb_text_alignment="center"
                            android:layout_gravity="center_horizontal"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:onClick="onCreatedFilterClick">
                        </com.beardedhen.androidbootstrap.BootstrapButton>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="1.1"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="0dp">

                        <com.beardedhen.androidbootstrap.BootstrapButton
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:text="Responsible"
                            android:textAlignment="center"
                            bootstrapbutton:bb_roundedCorners="false"
                            bootstrapbutton:bb_size="default"
                            bootstrapbutton:bb_type="chore"
                            bootstrapbutton:bb_text_alignment="center"
                            android:layout_gravity="center_horizontal"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:onClick="onResponsibleFilterClick">
                        </com.beardedhen.androidbootstrap.BootstrapButton>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="0.8"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="0dp">

                        <com.beardedhen.androidbootstrap.BootstrapButton
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:text="@string/chores_add_button"
                            android:textAlignment="center"
                            bootstrapbutton:bb_roundedCorners="false"
                            bootstrapbutton:bb_size="default"
                            bootstrapbutton:bb_type="success"
                            bootstrapbutton:bb_text_alignment="center"
                            bootstrapbutton:bb_icon_right="fa-plus"
                            android:layout_gravity="center_horizontal"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:onClick="onChoreAddClick">
                        </com.beardedhen.androidbootstrap.BootstrapButton>

                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:id="@id/chores_choreContainer_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.59"
                    android:weightSum="1">
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
