<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:weightSum="1"
    >

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="@string/hello_world"
        android:textAlignment="center"
        android:enabled="false"
        bootstrapbutton:bb_roundedCorners="false"
        bootstrapbutton:bb_size="default"
        bootstrapbutton:bb_type="bill"
        bootstrapbutton:bb_text_alignment="center"
        android:id="@id/bill_info_header_button"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </com.beardedhen.androidbootstrap.BootstrapButton>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:text="@string/hello_world"
                android:textAlignment="center"
                android:enabled="false"
                bootstrapbutton:bb_roundedCorners="false"
                bootstrapbutton:bb_size="default"
                bootstrapbutton:bb_type="gray"
                bootstrapbutton:bb_text_alignment="center"
                android:id="@id/bill_info_body_button"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
            </com.beardedhen.androidbootstrap.BootstrapButton>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="0dp">
                    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:text="Amount"
                        android:textAlignment="center"
                        android:enabled="false"
                        bootstrapbutton:bb_roundedCorners="false"
                        bootstrapbutton:bb_size="default"
                        bootstrapbutton:bb_type="bill"
                        bootstrapbutton:bb_text_alignment="center"
                        android:id="@id/bill_info_header_button"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">
                    </com.beardedhen.androidbootstrap.BootstrapButton>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="0dp">
                    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:textAlignment="center"
                        android:enabled="false"
                        android:text="Hello World!"
                        bootstrapbutton:bb_roundedCorners="false"
                        bootstrapbutton:bb_size="default"
                        bootstrapbutton:bb_type="gray"
                        bootstrapbutton:bb_text_alignment="center"
                        android:id="@id/billInfo_amount_field"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">
                    </com.beardedhen.androidbootstrap.BootstrapButton>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="0dp">
                    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:text="Creator"
                        android:textAlignment="center"
                        android:enabled="false"
                        bootstrapbutton:bb_roundedCorners="false"
                        bootstrapbutton:bb_size="default"
                        bootstrapbutton:bb_type="bill"
                        bootstrapbutton:bb_text_alignment="center"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">
                    </com.beardedhen.androidbootstrap.BootstrapButton>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="0dp">
                    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:textAlignment="center"
                        android:enabled="false"
                        android:text="@string/hello_world"
                        bootstrapbutton:bb_roundedCorners="false"
                        bootstrapbutton:bb_size="default"
                        bootstrapbutton:bb_type="gray"
                        bootstrapbutton:bb_text_alignment="center"
                        android:id="@id/billInfo_creator_field"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">
                    </com.beardedhen.androidbootstrap.BootstrapButton>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="0dp">
                    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:text="Responsible"
                        android:textAlignment="center"
                        android:enabled="false"
                        bootstrapbutton:bb_roundedCorners="false"
                        bootstrapbutton:bb_size="default"
                        bootstrapbutton:bb_type="bill"
                        bootstrapbutton:bb_text_alignment="center"
                        android:id="@id/bill_info_header_button"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">
                    </com.beardedhen.androidbootstrap.BootstrapButton>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="0dp">
                    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:enabled="false"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">
                    </com.beardedhen.androidbootstrap.BootstrapButton>
                    <HorizontalScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal"
                            android:id="@id/billInfo_responsible_container">
                        </LinearLayout>
                    </HorizontalScrollView>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="0dp">
                    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:text="Submit"
                        android:textAlignment="center"
                        android:enabled="true"
                        bootstrapbutton:bb_roundedCorners="false"
                        bootstrapbutton:bb_size="default"
                        bootstrapbutton:bb_type="primary"
                        bootstrapbutton:bb_text_alignment="center"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@id/billInfo_confirm_button"
                        android:onClick="onBillInfoConfirmClick">
                    </com.beardedhen.androidbootstrap.BootstrapButton>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="0dp">
                    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:text="Cancel"
                        android:textAlignment="center"
                        android:enabled="true"
                        bootstrapbutton:bb_roundedCorners="false"
                        bootstrapbutton:bb_size="default"
                        bootstrapbutton:bb_type="primary"
                        bootstrapbutton:bb_text_alignment="center"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@id/billInfo_cancel_button"
                        android:onClick="onBillInfoCancelClick">
                    </com.beardedhen.androidbootstrap.BootstrapButton>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>