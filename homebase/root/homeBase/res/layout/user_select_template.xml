<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:fontFamily="fontawesome-webfont.ttf"
    >
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@id/userSelection_template_container">
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="User"
            bootstrapbutton:bb_roundedCorners="false"
            bootstrapbutton:bb_size="default"
            bootstrapbutton:bb_type="gray"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@id/userSelection_button"
            android:onClick="onUserSelected"
            >
        </com.beardedhen.androidbootstrap.BootstrapButton>
    </RelativeLayout>
</LinearLayout>