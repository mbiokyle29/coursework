<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:fontFamily="fontawesome-webfont.ttf">
    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="@string/login_test_text"
        android:textAlignment="center"
        bootstrapbutton:bb_roundedCorners="false"
        bootstrapbutton:bb_size="default"
        bootstrapbutton:bb_type="gray"
        bootstrapbutton:bb_text_alignment="center"
        bootstrapbutton:bb_icon_right="fa-chevron-right"
        android:id="@id/bill_container_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onBillContainerClick">
    </com.beardedhen.androidbootstrap.BootstrapButton>
</LinearLayout>